<%- include ../partials/header.ejs %>
<body>
<%- include ../partials/main_nav.ejs %>

<!-- Content for the Add page -->
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>

            <!-- 
            POST - for submitting data
            id - for potential css/javascript
            required - ensures form not left blank
            placeholder - display text in text box to guide input
             -->
            <form class="form" method="POST">
                <div class="form-group">
                    <label for="nameTextField">Name</label>
                    <input type="text" class="form-control"
                    id="nameTextField"
                    placeholder="Enter the Tablet name"
                    name="Name" required>
                </div>

                <div class="form-group">
                    <label for="priceTextField">Price</label>
                    <input type="text" class="form-control"
                    id="priceTextField"
                    placeholder="Enter the Tablet's price"
                    name="Price" required>
                </div>

                <div class="form-group">
                    <label for="pressuresensitivitylevelsTextField">PressureSensitivityLevels</label>
                    <input type="text" class="form-control"
                    id="pressuresensitivitylevelsTextField"
                    placeholder="Enter the Tablet's pressure sensitivity levels"
                    name="PressureSensitivityLevels" required>
                </div>

                <div class="form-group">
                    <label for="sizeTextField">Size</label>
                    <input type="text" class="form-control"
                    id="sizeTextField"
                    placeholder="Enter the Tablet's size (S, M, L)"
                    name="Size" required>
                </div>

                <div class="form-group">
                    <label for="bluetoothTextField">Screen</label>
                    <input type="text" class="form-control"
                    id="screenTextField"
                    placeholder="Enter 'y' if the tablet has a screen, 'n' if it does not"
                    name="Screen" required>
                </div>

                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i> Submit</button>
                
                    <a href="/tabletlist" class="btn btn-warning">
                        <i class="fas fa-undo"></i> Cancel</a>

            </form>
        </div>

    </div>
</div>

<%- include ../partials/bottom_fixed_nav.ejs %>  

<%- include ../partials/footer.ejs %>
